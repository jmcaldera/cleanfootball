<?xml version="1.0" encoding="utf-8"?>
<com.jmcaldera.cleanfootball.util.ScrollChildSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/standings_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standings"
            android:id="@+id/standings_text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/standings_button"
            android:text="test"
            android:layout_below="@+id/standings_text"/>
    </RelativeLayout>

</com.jmcaldera.cleanfootball.util.ScrollChildSwipeRefreshLayout>